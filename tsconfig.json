{
    "include": ["src/**/*"],
    "compilerOptions": {
        "lib": ["ES2022", "DOM"],
        "module": "ESNext",
        "target": "ES2022",
        "outDir": "dist",
        "useDefineForClassFields": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    }
}